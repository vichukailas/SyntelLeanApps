<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="DNCTrackerCore">

		<mapping-file>META-INF/orm.xml</mapping-file>

		<class>com.syntel.insurance.dnc.DNCTrackerCore.models.ProjectTeam</class>
		<class>com.syntel.insurance.dnc.DNCTrackerCore.models.ProjectTeamPK</class>
		<class>com.syntel.insurance.dnc.DNCTrackerCore.models.PremissibleBuffer</class>
		<class>com.syntel.insurance.dnc.DNCTrackerCore.models.HeadCountReport</class>
		<class>com.syntel.insurance.dnc.DNCTrackerCore.models.UnbilledLeakagePid</class>
		<class>com.syntel.insurance.dnc.DNCTrackerCore.models.UnbilledLeakagePidPK</class>
		<class>com.syntel.insurance.dnc.DNCTrackerCore.models.OffshoreBillableHour</class>
		<class>com.syntel.insurance.dnc.DNCTrackerCore.models.BufferData</class>
		<class>com.syntel.insurance.dnc.DNCTrackerCore.models.HolidaysCount</class>
		<class>com.syntel.insurance.dnc.DNCTrackerCore.models.Timesheet</class>
		<class>com.syntel.insurance.dnc.DNCTrackerCore.models.Holiday</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:derby:C:\DNC Tracker\Database\DNCDB;create=true" />
			<property name="javax.persistence.jdbc.user" value="sysadmin" />
			<property name="javax.persistence.jdbc.password" value="Syntel123$" />

			<!-- EclipseLink should create the database schema automatically -->
			<property name="javax.persistence.schema-generation.database.action"
				value="create" />
			<property name="javax.persistence.schema-generation.create-source"
				value="metadata" />
			<property name="javax.persistence.sql-load-script-source"
				value="META-INF/load_script.sql" />

			<!-- <property name="eclipselink.logging.level" value="FINE" /> <property 
				name="eclipselink.logging.level.sql" value="FINE" /> <property name="eclipselink.logging.parameters" 
				value="true" /> -->

			<property name="eclipselink.jpa.uppercase-column-names"
				value="true" />

		</properties>
	</persistence-unit>
</persistence>
